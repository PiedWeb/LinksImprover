{
    "name": "piedweb/linksimprover",
    "description": "Increase your search rankings by improve your internal linking.",
    "keywords": [
        "piedweb",
        "LinksImprover"
    ],
    "homepage": "https://dev.piedweb.com",
    "license": "MIT",
    "authors": [
        {
            "name": "Robin",
            "email": "contact@piedweb.com",
            "homepage": "https://dev.piedweb.com",
            "role": "Developer"
        }
    ],
    "require": {
        "php": "^7.4|^8.0",
        "league/csv": "^9.6"
    },
    "require-dev": {
        "friendsofphp/php-cs-fixer": "^2.16",
        "phpunit/phpunit": "^9.3",
        "vimeo/psalm": "^3.11"
    },
    "autoload": {
        "psr-4": {
            "Piedweb\\LinksImprover\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Piedweb\\LinksImprover\\Tests\\": "tests"
        }
    },
    "scripts": {
        "psalm": "vendor/bin/psalm",
        "test": "vendor/bin/phpunit",
        "test-coverage": "vendor/bin/phpunit --coverage-html coverage",
        "format": "vendor/bin/php-cs-fixer fix --allow-risky=yes"
    },
    "config": {
        "sort-packages": true
    },
    "prefer-stable": true
}
